@model IEnumerable<Daycare.Models.DailyReport>

@{
    ViewData["Title"] = "Index";
}

<h1>Daily Reports</h1>

<p>
    <a class="btn btn-secondary" asp-action="Create">Create New Report</a>
</p>

<form asp-controller="DailyReport" asp-action="Index">
    <p>
        Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Behavior)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPoops)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Behavior)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPoops)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.DailyReportId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.DailyReportId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DailyReportId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
